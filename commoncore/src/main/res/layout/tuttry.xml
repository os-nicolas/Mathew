<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:background="@drawable/myrect"
        android:layout_weight="1"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="-10dp"
        android:layout_marginRight="-10dp"
        android:paddingTop="4px"
        android:paddingBottom="7px"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:id="@+id/linearLayout">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ff0000"
            android:id="@+id/ribbon"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:orientation="vertical"
            android:paddingBottom="45dp"
            android:gravity="center">

            <cube.d.n.commoncore.FadeInTextView
                android:padding="5dp"
                custom:timeOut="50"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:textSize="25sp"
                android:layout_gravity="center|bottom"
                android:gravity="start|bottom"
                android:textColor="#ffffff"
                android:background="#ff0000"
                android:id="@+id/tut_title" />



            <LinearLayout
                android:layout_width="fill_parent"
                android:gravity="center"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/myrect"
                    android:paddingTop="2px"
                    android:paddingBottom="3px"
                    android:padding="5px">


                    <LinearLayout
                        android:background="#000000"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:padding="1dp"
                        android:orientation="vertical">

                        <cube.d.n.commoncore.FadeInTextView

                            custom:timeOut="350"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tut_body"
                            android:padding="2dp"
                            android:text="Give it a try!"
                            android:textColor="#ffffff"
                            android:background="#000000" />

                        <FrameLayout
                            android:id="@+id/tut_video_holder"
                            android:layout_width="fill_parent"
                            android:layout_gravity="center"
                            android:layout_height="fill_parent">


                            <cube.d.n.commoncore.Main
                                android:id="@+id/tuttry_main"
                                android:layout_gravity="center"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                custom:start_layout="tut_e" />

                            <cube.d.n.commoncore.tuts.YayTutView
                                android:visibility="gone"
                                android:id="@+id/tuttry_yay"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent">


                            </cube.d.n.commoncore.tuts.YayTutView>

                            <LinearLayout
                                android:visibility="gone"
                                android:orientation="vertical"
                                android:layout_height="fill_parent"
                                android:layout_width="fill_parent"
                                android:background="#ff000000"
                                android:id="@+id/tuttry_white_out">

                            </LinearLayout>

                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <cube.d.n.commoncore.FadeInTextView
        android:padding="5dp"
        android:textSize="12sp"
        android:textColor="#999999"
        custom:timeOut="600"
        android:layout_width="fill_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="1 of 5"
        android:id="@+id/tut_at" />

</LinearLayout>